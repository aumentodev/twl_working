//-------- Tab Content -------------
.tab_contents{
  padding:20px 0;
  ul.tabs{
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    list-style: none;
    margin:0 !important;
    padding:0 0 15px;
    align-items:center;
    
    li{
      flex: 1 1 33.33%;
      max-width: 33.33%;
      width:100%;
      border: 2px solid #c2c2c2;
      margin:0 -1px;
      color: #808080;
      font-family: 'Montserrat', sans-serif !important;
      font-weight: 600 !important;
      font-size: 14px !important;
      line-height:20px !important;
      text-align:center;
      cursor:pointer;
      position:relative;
      padding: 15px 10px;
      &:hover, &.active {
		border-color: #000;
		color: #000;
        z-index:1;
		}
    }
  }
  .tab_drawer_heading { display: none; }
  .tab_container{
    height:auto;
    transition: all 0.5s ease;
  }
.tab_content {
	padding: 10px 0;
	display: none;
}
  
  
@media screen and (max-width: 767px) {
	.tabs {
		display: none !important;
	}
	.tab_drawer_heading {
      display:block;
		width:100%;
      border: 2px solid #c2c2c2;
      margin:0 auto 10px;
      color: #808080;
      font-family: 'Montserrat', sans-serif !important;
      font-weight: 600 !important;
      font-size: 14px !important;
      line-height:20px !important;
      text-align:center;
      cursor:pointer;
      position:relative;
      padding: 15px 10px;
      &:hover, &.active, &.d_active {
		border-color: #000;
		color: #000;
        z-index:1;
		}
	}
}
  
  
  
}
.tab_content{
  .faq{
    list-style-type:none;
    margin:0;
    dd{margin:0;}
    dl{
    padding-top: 5px;
    padding-bottom: 5px;
      margin:0;
    border-bottom: 1px solid #ccc;
    }
    dt{
      font-size: 14px;
    text-transform: uppercase;
    margin-top: 10px;
    margin-bottom: 10px;
    font-family: 'Montserrat', sans-serif !important;
    font-weight: 700 !important;
      padding-right:30px;
      text-decoration:none !important;
      border:0;
      display:block;
      position:relative;
      color: #000 !important;
      opacity: 1 !important;
      cursor:pointer;
      
      &:after {
    content: '+';
    position: absolute;
    font-size: 21px;
    height: 20px;
    width: 20px;
    right: 0;
    top: 2px;
        line-height:20px;
    font-family: mst-r;
    font-weight: normal;
      }
      &.active{
        &:after{
          content: '-';
        }
      }
      
    }
  }
}

