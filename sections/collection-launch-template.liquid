          }
     //}
   }

  function LoadMoreProducts(){
    scrollNode = $('#more').last();
    scrollURL = $('#more p a').last().attr("href");
    $('#loading').show();
    $.ajax({
      type: 'GET',
      url: scrollURL,
      beforeSend: function() {
        scrollNode.hide();
      },
