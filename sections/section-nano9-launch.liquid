<div class="page-default-template template-video-landing">
   <div class="page-width">
	  <div class="section-header text-center">
      <h1>{{ page.title }}</h1>
      {% comment %}<p>{{ page.content}}</p>{% endcomment %}
    </div>
    <section class="page_content">
      <div class="video_box">
        <div class="video">
          <iframe class="myVideo" width="100%" height="100%" src="{{section.settings.youtube_url}}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen=""></iframe>
        </div>
      </div>
      <div class="section-bottom-header text-center">
      <h1>{{section.settings.heading}}</h1>
        <a href="{{section.settings.collection_link}}" class="shop-btn">{{section.settings.button_text}}</a>
      </div>
    </section>
    <div class="rte"></div>
  </div>
</div>
{% schema %}
  {
    "name": "Video landing page",
    "settings": [
		{
          "type": "text",
          "id": "youtube_url",
          "label": "Youtube URL"
        },	
		{
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
		{
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
		{
          "type": "text",
          "id": "collection_link",
          "label": "Collection URL"
        }
	]
  }
{% endschema %}

