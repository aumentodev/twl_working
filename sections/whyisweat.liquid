<div class="top_image_banner full_width">
    <img src="{{ section.settings.desktop_image | img_url: 'master'}}" width="100%" class="why-image small--hide">  
    <img src="{{ section.settings.mobile_image | img_url: 'master'}}" width="100%" class="why-image medium-up--hide">
</div>

<div class="page-default-template why_it_sweat">  
  <div class="page-width">
      <div class="section-header text-center whyis_heading1">        
        {{section.settings.description}}        
      </div>
    <!--section video-->    
    <div class="grid">
       {% for block in section.blocks %}
      	  {% assign released = 0 %}
      	  {% assign video_image = "" %}  
          {% assign video_title = "" %}
          {% assign video_url = "javascript:void(0);" %}
      	  {% if block.settings.video_image != "" %}
          {% assign video_image = block.settings.video_image %}      
          {% endif %}
      	  {% if block.settings.video_title != "" %}
          {% assign video_title = block.settings.video_title %}      
          {% endif %}
          {% if block.settings.video_url != "" %}
          {% assign video_url = block.settings.video_url %}      
          {% endif %}
      	  {% assign mod = forloop.index | modulo:2 %}
      	  {% if mod == 0 %}
      		{% assign class_desc = "story_desc" %}
          {% else %}
      		{% assign class_desc = "rease_desc" %}
      	  {% endif %}
          {% assign today =  "now" | date: "%d-%m-%Y" %}
          {% if block.settings.releasing_date != "" %}
          {% assign releasing_date = block.settings.releasing_date %}      
          {% if releasing_date == today %}
      		 {% assign released = 1%}
          {% else %}
      		{% assign released = 0 %}
          {% endif %}
          {% endif %}
      	  {% if forloop.index == 1 %}
      		 {% assign released = 1%}
          {% endif %}
          <div class="grid__item medium-up--one-half">
            <div class="{{class_desc}}">
              {% if released == 1 %}
              	{% if block.settings.video_url != "" %}
                	{% assign video_url = block.settings.video_url %}
              		<div class="video-wrap">
                    <iframe class="sweat-video" width="100%" height="100%" src="{{video_url}}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen=""></iframe>
              		</div>
                {% else %}
              		<a href="javascript:void(0);" class="not_live">  
                      <img class="realease_story" src="{{video_image | img_url: 'master'}}"/> 
                  	</a>
                {% endif %}
              {% else %}
              	<a href="javascript:void(0);" class="not_live">  
              		<img class="realease_story" src="{{video_image | img_url: 'master'}}"/> 
               	</a>
              {% endif %}
              <h4 class="text-center story_detail">{{video_title}}</h4>
            </div>
          </div>    
        {% endfor %}               
	</div> 
    <section id="get-in-touch" class="section">
      <h1 class="text-center whyis_sweat">{{section.settings.form_title}}</h1>
    <div class="container">
      <div class="row">
   		<div class="col-md-12 set_form">       
        <h2 class="appreal_heading_text appgive-title">{{section.settings.whyisweat_newsletter_title}}</h2>
        <p class="appreal_heading_text appgive-subtitle">{{section.settings.whyisweat_newsletter_subtitle}}</p>
             <form id="email_signup" class="klaviyo_standard_embed_QqXqgT contact_form whyweatform" action="//manage.kmail-lists.com/subscriptions/subscribe" data-ajax-submit="//manage.kmail-lists.com/ajax/subscriptions/subscribe" method="GET" target="_blank" novalidate="novalidate">      
            	<div class="klaviyo_messages">
              		<div class="success_message" style="display:none;"></div>
              		<div class="error_message" style="display:none;"></div>
              	</div> 
                <div class="grid__item-setf">
                  <div class="set_input name_fld txt-centr">
                  	<input required type="text" id="ContactFormName" name="contact[name]" placeholder="Enter name" value="">
               	  </div>
                </div>
            	<input type="hidden" name="g" value="J9j9LP">
                <div class="grid__item-setf">
                	<div class="set_input email_fld txt-centr">
    					<input type="email" value="" name="email" id="k_id_email" placeholder="Your email" />
           			</div>
         		</div>         
 				<div class="col-md-12 ">
                  <div class="set_input name_fld txt-centr">
                      <button type="submit" class="btn contactbtn" style="color: #fff;background-color: #000;">{{section.settings.whyisweat_newsletter_buttontitle}}</button>             
                  </div>
           		</div>           
     		</form>
    </div>
  </div>
</div>
  </section>
  </div>
</div>

